<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lars.larsoverwater_pset1.MainActivity">



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/arms" />

        <ImageView
            android:id="@+id/ears"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/ears" />

        <ImageView
            android:id="@+id/eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyes" />

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/hat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/hat" />

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/mouth" />

        <ImageView
            android:id="@+id/mustache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/mustache" />

        <ImageView
            android:id="@+id/nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/nose" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/shoes" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="arms"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/checkbox_ears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ears"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/checkbox_eyebrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eyebrows"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/checkbox_eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eyes"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/checkbox_glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="glasses"
                android:onClick="onCheckboxClicked"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="15dp">

            <CheckBox
                android:id="@+id/checkbox_hat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hat"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/checkbox_mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mouth"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/checkbox_mustache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mustache"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/checkbox_nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nose"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/checkbox_shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shoes"
                android:onClick="onCheckboxClicked"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
